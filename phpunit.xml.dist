<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./tests/bootstrap.php"
        >
    <testsuites>
        <testsuite name="phplx Prize Raffle Console Application test suite">
            <directory>./tests/Phplx/Raffle</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/Phplx/Raffle</directory>
        </whitelist>
    </filter>
</phpunit>